<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- App Title -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security/ Cleaner"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Scan Button -->
    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan for Malware"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Root Detection Button -->
    <Button
        android:id="@+id/btnRootCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check for Root"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Cache Cleaner Button -->
    <Button
        android:id="@+id/btnCleanCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clean Cache"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Settings Button -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:background="#9E9E9E"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="18sp"/>

</LinearLayout>